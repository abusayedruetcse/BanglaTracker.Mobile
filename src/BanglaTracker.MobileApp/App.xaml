<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:BanglaTracker.MobileApp"
             xmlns:converters="clr-namespace:BanglaTracker.Presentation.Converters;assembly=BanglaTracker.Presentation"
             x:Class="BanglaTracker.MobileApp.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <converters:PointStatusConverter x:Key="PointStatusConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
